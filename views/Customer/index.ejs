<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Customers</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
  </head>
  <body>
    <div class="container">
      <table class="table table-striped">
        <thead>
          <tr>
            <td><b>Customer Name</b></td>
            <td><b>Cutomer Address</b></td>
            <td colspan="2"><b>Action</b></td>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i < customers.length; i++) { %>
          <tr>
            <td><%= customers[i].name %></td>
            <td><%= customers[i].address %></td>
            <td><a href="/customer/edit/<%= customers[i]._id %>" class="btn btn-primary">Edit</a></td>
            <td><a href="/customer/delete/<%= customers[i]._id %>" class="btn btn-danger">Delete</a></td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </body>
</html>