<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Restroid Menu</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
  </head>
  <body>
    <div class="container">
        <h1>Add Order</h1>
        <form method="post" action="/order/post">
          <div class="form-group">
            <label for="item">Customer Id</label>
            <input type="text" class="form-control" id="customerId" name="customerId">
          </div>
          <div class="form-group">
            <label for="item">Customer Name</label>
            <input type="text" class="form-control" id="customerName" name="customerName">
          </div>  
          <% for(var i=1; i<=2; i++) { %>
          <div class="form-group">
            <label for="item">Item Name <%= i %></label>
            <input type="text" class="form-control" id="item<%= i %>" name="item<%= i %>">
          </div> 
          <div class="form-group">
            <label for="item">Item Qty <%= i %></label>
            <input type="number" class="form-control" id="item<%= i %>qty" name="item<%= i %>qty">
          </div>      
          <% } %>
          <button type="submit" class="btn btn-default">Add Order</button>
        </form>
    </div>
  </body>
</html>